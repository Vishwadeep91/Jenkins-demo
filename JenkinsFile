pipeline{
  agent{
    docker{
      image 'maven:3.9.6-eclipse-temurin-11'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }
  stages{
    stage('Checkout'){
      steps{
        sh 'echo code is checked out'
        git branch: 'main', url: 'https://github.com/Vishwadeep91/Jenkins-demo.git'
      }
    }
    stage('Build'){
      steps{
        sh 'ls -ltr'
        sh 'mvn clean package -DskipTests'
      }
    }
    stage('Build and push docker image'){
      environment{
        DOCKER_IMAGE = "vishwadeep91/spring-jenkins-demo:${env.BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps{
        script{
          sh "/usr/bin/docker build -t ${DOCKER_IMAGE} ."
          def dockerImage = docker.image("${DOCKER_IMAGE}")
          docker.withCredentials('https://index.docker.io/v1/','docker-cred'){
            dockerImage.push()
          }
        }
      }
    }
    stage('Clean Workspace') {
      steps {
        deleteDir() 
      }
    }
    stage('Checkout Code') {
      steps {
        checkout scm
      }
    }
  }
}
